<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OStories" parent="ChiliDesignTheme">
        <item name="dividerColor">@color/gray_3</item>
        <item name="colorPrimary">@color/white_1</item>
        <item name="colorPrimaryDark">@color/gray_2</item>
        <item name="colorAccent">@color/magenta_1</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.OStories" parent="Base.Theme.OStories" />

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>