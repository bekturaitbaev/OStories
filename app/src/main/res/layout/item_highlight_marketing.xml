<?xml version="1.0" encoding="utf-8"?>
<com.design2.chili2.view.container.HighlighterContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:highlighterState="visible"
    android:layout_marginStart="@dimen/padding_10dp"
    app:cornerRadius="@dimen/padding_14dp"
    app:highlighterColor="@color/folly_1">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/view_80dp"
        android:layout_height="@dimen/view_80dp"
        app:cardCornerRadius="@dimen/padding_12dp"
        app:cardElevation="@dimen/elevation_0dp"
        android:layout_margin="@dimen/view_5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_highlight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Chili.H10.Primary.Bold"
                android:textColor="@color/white_1"
                android:layout_gravity="bottom"
                android:lines="2"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/view_8dp"
                android:layout_marginBottom="@dimen/padding_8dp"
                android:layout_marginEnd="@dimen/padding_2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Все события"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_margin="@dimen/padding_2dp"
        android:src="@drawable/ic_heart_highlight_corner"/>

</com.design2.chili2.view.container.HighlighterContainer>